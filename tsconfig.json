{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["src/modules/system-admin/shared/utils/init-admin.ts", "scripts/**"],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
      // "@prisma/client": ["./src/generated/prisma/client"]
    },
    "noEmit": true
  }
}
